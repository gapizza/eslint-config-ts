{
  "name": "@gapizza/eslint-config-ts",
  "description": "Eslint Config for Typescript projects",
  "version": "3.0.1",
  "author": "Eric Hacke",
  "bugs": {
    "url": "https://github.com/gapizza/eslint-config-ts/issues"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@gapizza/commitlint-config": "^1.0.1",
    "@gapizza/prettier-config": "^1.0.1",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/bluebird": "^3.5.35",
    "@types/node": "^15.12.4",
    "commitizen": "^4.2.4",
    "commitlint": "^12.1.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.29.0",
    "fixpack": "^4.0.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1",
    "prettier-eslint-cli": "^5.0.1"
  },
  "engineStrict": true,
  "engines": {
    "npm": ">=7.0.0"
  },
  "files": [
    "*.js",
    "!scratch.*"
  ],
  "homepage": "https://github.com/gapizza/eslint-config-ts#readme",
  "keywords": [
    "config",
    "eslint",
    "typescript"
  ],
  "license": "MIT",
  "main": "index.js",
  "peerDependencies": {
    "@gapizza/eslint-config": "^2.1.1",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "eslint-import-resolver-typescript": "^2.4.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gapizza/eslint-config-ts.git"
  },
  "scripts": {
    "beta": "npm version prerelease && npm publish --tag beta",
    "commit": "git-cz",
    "lint": "fixpack && prettier-eslint --write && eslint --fix \"**/*.{js,ts}\"",
    "major": "npm version major && npm publish",
    "minor": "npm version minor && npm publish",
    "patch": "npm version patch && npm publish",
    "postpublish": "git push",
    "prepare": "fixpack && husky install",
    "preversion": "npm run lint",
    "test": "echo \"Error: no test specified\" && exit 1"
  }
}
